{
  "manifest_version": 3,
  "name": "Deep Accessibility Tool",
  "version": "1.1.0",
  "description": "Transform any website into an accessible experience with powerful visual, text, and contrast adjustment tools",
  "author": "SamsudeenAshad",
  "homepage_url": "https://github.com/SamsudeenAshad/Deep_Accesible_tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Deep Accessibility Tool"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["accessibility.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["accessibility.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
